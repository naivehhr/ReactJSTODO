{
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "ecmaFeatures": {
    "jsx": true,
    "modules": true
  },
  "env": {
    "browser": true,
    "amd": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "comma-dangle": 1,
    "quotes": [ 1, "single" ],
    "no-undef": 1,
    "global-strict": 0,
    "no-extra-semi": 1,
    "no-underscore-dangle": 0,
    "no-console": 1,
    "no-unused-vars": 1,
    "no-trailing-spaces": [1, { "skipBlankLines": true }],
    "no-unreachable": 1,
    "no-alert": 0,
    "arrow-spacing": 0,
    "react/jsx-uses-react": 1,
    "react/jsx-no-bind": 0,
    "brace-style": 0,
    "semi": 0,
    "babel/object-shorthand": 0,
    "react/jsx-indent": 0,
    "jsx-quotes": 0,
    "camelcase": 0,
    "babel/object-curly-spacing": 0,
    "react/prop-types": 0,
    "react/jsx-space-before-closing": 0,
    "no-multiple-empty-lines": 0,
    "no-use-before-define": 0,
    "prefer-const": 0
  },
  "extends": [
    "xo-react/space",
    "xo-space/esnext"
  ]
}
